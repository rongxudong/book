{
    "type":"origin",
    "caption":"用户",
    "resource":{
        "urlPattern":"/demo/{id}"
    },
    "mock":[
        "demo/demo#GET.json",
        "demo/demo#POST.json",
        "demo/demo.N#GET.json",
        "demo/demo.status.N#PATCH.json",
        "demo/demo.N#DELETE.json"
    ],
    "dataGrid":{
        "top":{
            "searchGroup":{
                "input": {
                    "ngModel": "keyword",
                    "placeholder": "关键字"
                },
                "select":{
                    "ngModel":"select",
                    "dataListName":""
                },
                "btn": {
                    "text": "搜索"
                }
            }
        },
        "gridTable": {
            "cols": [
                {
                    "text": "账号",
                    "property": "loginName"
                },
                {
                    "text": "姓名",
                    "property": "name"
                },
                {
                    "text": "手机",
                    "property": "mobile"
                },
                {
                    "text": "邮件",
                    "property": "email"
                }
            ],
            "operation":[
                {
                    "type":"default",
                    "text":"修改",
                    "method":"modify"
                },
                {
                    "type":"danger",
                    "text":"删除",
                    "method":"del"
                }
            ]
        }
        
    },
    "form":{
        "fields":[
            {
                "key": "loginName",
                "type": "text",
                "label": "用户名",
                "validators": {
                    "rules": {
                        "ng-required": true
                    }
                }
            },
            {
                "key": "name",
                "type": "text",
                "label": "姓名",
                "validators": {
                    "rules": {
                        "ng-required": true
                    }
                }
            },
            {
                "key": "province",
                "type": "select",
                "label": "省份",
                "dataListName":"provinceList",
                "validators": {
                    "rules": {
                        "ng-required": true
                    }
                }
            },
            {
                "key": "mobile",
                "type": "text",
                "label": "手机",
                "validators": {
                    "rules": {
                        "ng-required": true,
                        "mobile": true
                    },
                    "messages": {
                        "mobile": "格式不正确(可省略)"
                    }
                }
            },
            {
                "key": "email",
                "type": "email",
                "label": "邮箱",
                "validators": {
                    "rules": {
                        "ng-required": true
                    }
                }
            },
            {
                "key": "gender",
                "type": "radio",
                "label": "性别",
                "dataListName":"genderList",
                "validators": {
                    "rules": {
                        "ng-required": true
                    }
                }
            },
            {
                "key": "favor",
                "type": "checkbox",
                "label": "爱好",
                "dataListName":"favorList",
                "validators": {
                    "rules": {
                    }
                }
            }
        ]
    }
}